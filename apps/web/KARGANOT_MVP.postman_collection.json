        {
          "name": "Register",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const res = pm.response.json();",
                  "    console.log('‚úÖ Kayƒ±t ba≈üarƒ±lƒ±:', res.data.user.email);",
