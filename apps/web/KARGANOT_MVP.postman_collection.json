            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const res = pm.response.json();",
                  "    pm.collectionVariables.set('accessToken', res.data.accessToken);",
                  "    pm.collectionVariables.set('refreshToken', res.data.refreshToken);",
                  "    console.log('‚úÖ Giri≈ü ba≈üarƒ±lƒ±, token kaydedildi');",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@karganot.com\",\n  \"password\": \"12345\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
