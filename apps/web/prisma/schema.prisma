// KARGANOT MVP - SQLite Compatible Schema
generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// USER & AUTHENTICATION
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime?
  passwordHash  String?
  name          String
  image         String?
  universityId  String?
  university    University? @relation(fields: [universityId], references: [id])
  departmentId  String?
  department    Department? @relation(fields: [departmentId], references: [id])
  role          String    @default("USER")
  status        String    @default("ACTIVE")
  plan          String    @default("FREE")
  planRenewsAt  DateTime?
  monthlyDownloadQuota Int @default(3)
  monthlyDownloadUsed  Int @default(0)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  lastLoginAt   DateTime?
  accounts      Account[]
  sessions      Session[]
  notes         Note[]         @relation("NoteUploader")
  downloads     Download[]
  ratings       Rating[]
  reports       Report[]
  transactions  Transaction[]
  auditLogs     AuditLog[]
  @@index([email])
  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime
  @@unique([identifier, token])
  @@map("verification_tokens")
}

// TAXONOMY
model University {
  id         String    @id @default(cuid())
  name       String    @unique
  slug       String    @unique
  city       String?
  type       String?
  isActive   Boolean   @default(true)
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  faculties  Faculty[]
  users      User[]
  notes      Note[]
  @@map("universities")
}

model Faculty {
  id           String     @id @default(cuid())
  universityId String
  university   University @relation(fields: [universityId], references: [id], onDelete: Cascade)
  name         String
  slug         String
  isActive     Boolean    @default(true)
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  departments  Department[]
  @@unique([universityId, slug])
  @@map("faculties")
}

model Department {
  id         String   @id @default(cuid())
  facultyId  String
  faculty    Faculty  @relation(fields: [facultyId], references: [id], onDelete: Cascade)
  name       String
  slug       String
  isActive   Boolean  @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  courses    Course[]
  users      User[]
  @@unique([facultyId, slug])
  @@map("departments")
}

model Course {
  id           String     @id @default(cuid())
  departmentId String
  department   Department @relation(fields: [departmentId], references: [id], onDelete: Cascade)
  name         String
  code         String?
  slug         String
  semester     String?
  isActive     Boolean    @default(true)
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  notes        Note[]
  @@unique([departmentId, slug])
  @@map("courses")
}

// NOTES
model Note {
  id              String     @id @default(cuid())
  courseId        String
  course          Course     @relation(fields: [courseId], references: [id], onDelete: Cascade)
  uploaderId      String
  uploader        User       @relation("NoteUploader", fields: [uploaderId], references: [id], onDelete: Cascade)
  universityId    String
  university      University @relation(fields: [universityId], references: [id])
  title           String
  description     String?
  tags            String     @default("[]")
  fileKey         String
  fileExt         String
  pages           Int?
  sizeBytes       Int
  previewKey      String?
  ocrTextIndexed  Boolean    @default(false)
  downloads       Int        @default(0)
  views           Int        @default(0)
  avgRating       Float?
  ratingCount     Int        @default(0)
  status          String     @default("PENDING")
  moderationReason String?
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
  ratings         Rating[]
  reports         Report[]
  downloadRecords Download[]
  @@index([courseId])
  @@index([uploaderId])
  @@index([status])
  @@map("notes")
}

// ENGAGEMENT
model Rating {
  id        String   @id @default(cuid())
  noteId    String
  note      Note     @relation(fields: [noteId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  rating    Int
  comment   String?
  createdAt DateTime @default(now())
  @@unique([noteId, userId])
  @@map("ratings")
}

model Report {
  id         String       @id @default(cuid())
  noteId     String
  note       Note         @relation(fields: [noteId], references: [id], onDelete: Cascade)
  reporterId String
  reporter   User         @relation(fields: [reporterId], references: [id], onDelete: Cascade)
  type       String
  detail     String
  status     String       @default("OPEN")
  createdAt  DateTime     @default(now())
  resolvedAt DateTime?
  resolverId String?
  @@map("reports")
}

model Download {
  id        String   @id @default(cuid())
  noteId    String
  note      Note     @relation(fields: [noteId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  ipHash    String
  userAgent String?
  createdAt DateTime @default(now())
  @@map("downloads")
}

// PAYMENTS
model Transaction {
  id          String            @id @default(cuid())
  userId      String
  user        User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  provider    String
  type        String
  amount      Float
  currency    String            @default("TRY")
  status      String
  providerRef String?
  createdAt   DateTime          @default(now())
  renewedAt   DateTime?
  expiresAt   DateTime?
  @@map("transactions")
}

model Webhook {
  id        String   @id @default(cuid())
  provider  String
  payload   String
  verified  Boolean  @default(false)
  createdAt DateTime @default(now())
  @@map("webhooks")
}

// AUDIT
model AuditLog {
  id          String   @id @default(cuid())
  actorUserId String?
  actor       User?    @relation(fields: [actorUserId], references: [id])
  action      String
  entity      String
  entityId    String
  diff        String?
  createdAt   DateTime @default(now())
  @@map("audit_logs")
}
