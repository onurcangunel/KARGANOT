}

enum DocumentStatus {
  PENDING      // Moderasyon bekliyor
  APPROVED     // Onaylandƒ±
  REJECTED     // Reddedildi
  DRAFT        // Taslak (kullanƒ±cƒ± kaydetmi≈ü ama y√ºklememi≈ü)
}
